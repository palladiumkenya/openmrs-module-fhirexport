<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">
	
	<!-- Base Module Properties -->
	<id>${project.parent.artifactId}</id>
	<name>${project.parent.name}</name>
	<version>${project.parent.version}</version>
	<package>org.openmrs.module.fhirexport</package>
	<author>openmrs</author>
	<description>
			${project.parent.description}
	</description>

	<activator>org.openmrs.module.fhirexport.FhirexportActivator</activator>
	
	<!-- <updateURL>https://modules.openmrs.org/modules/download/@MODULE_ID@/update.rdf</updateURL> -->
	<!-- /Base Module Properties -->
	
	<require_version>${openmrsPlatformVersion}</require_version>

	<require_modules>
		<require_module version="${appframeworkVersion}">
			org.openmrs.module.appframework
		</require_module>
		<require_module version="${uiframeworkVersion}">
			org.openmrs.module.uiframework
		</require_module>
		<require_module version="${uicommonsModuleVersion}">
			org.openmrs.module.uicommons
		</require_module>
		<require_module version="${appuiVersion}">
			org.openmrs.module.appui
		</require_module>
		<require_module version="${fhir2Version}">
			org.openmrs.module.fhir2
		</require_module>
	</require_modules>
	
	<!-- Extensions -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.fhirexport.extension.html.AdminList</class>
	</extension>

	<aware_of_modules>
		<aware_of_module>org.openmrs.module.legacyui</aware_of_module>
	</aware_of_modules>
	
	
	<!-- AOP
	<advice>
		<point>org.openmrs.api.FormService</point>
		<class>@MODULE_PACKAGE@.advice.DuplicateFormAdvisor</class>
	</advice>
	 /AOP -->
	
	
	<!-- Required Privileges 
	<privilege>
		<name>Form Entry</name>
		<description>Allows user to access Form Entry pages/functions</description>
	</privilege>
	 /Required Privileges -->



	<globalProperty>
		<property>fhirexport.fhir_export_dir</property>
		<defaultValue>src/main/resource</defaultValue>
		<description>
			An absolute path to a write-enabled directory where FHIR export module writes exported FHIR objects
		</description>
	</globalProperty>

	<globalProperty>
		<property>fhirexport.fhir_export_batch_size</property>
		<defaultValue>10</defaultValue>
		<description>
			The maximum number of patients to be contained in a fhir export bundle
		</description>
	</globalProperty>
	
	<globalProperty>
		<property>fhirexport.fhir_export_server_url</property>
		<defaultValue>http://localhost:8081/fhir</defaultValue>
		<description>
			The URL of the HAPI FHIR Server where the data will be posted
		</description>
	</globalProperty>

